<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.xogeeks.game.tictactoe.PlayerProperties">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/Main">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/Title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:id="@+id/HelpExitTitle">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:baselineAligned="false"
                    android:weightSum="1"
                    android:id="@+id/HelpExitInner">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="0.50"
                        android:id="@+id/Help"
                        android:gravity="start">

                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/helpButton"
                            android:layout_gravity="left"
                            android:background="@drawable/help" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:weightSum="1"
                        android:id="@+id/Exit"
                        android:layout_weight="0.50"
                        android:gravity="end">

                        <Button
                            android:layout_width="49dp"
                            android:layout_height="50dp"
                            android:id="@+id/exitButton"
                            android:layout_gravity="end"
                            android:background="@drawable/exit" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:id="@+id/LogoTitle">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/logoImageView"
                    android:src="@drawable/logoname"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:weightSum="1"
            android:id="@+id/PlayerNames"
            android:layout_weight="0.53">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.51"
                android:weightSum="1"
                android:background="@drawable/border"
                android:id="@+id/FirstPlayer">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/FisrtPlayerTitle">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="First Player"
                        android:id="@+id/firstPlayerTitleTextView"
                        android:textAlignment="center"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/FirstPlayerBody">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:id="@+id/FirstPlayerName">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Name :"
                            android:id="@+id/firstPlayerNameTextView"
                            android:layout_marginLeft="40dp"/>

                        <EditText
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="Player 1"
                            android:ems="10"
                            android:id="@+id/firstPlayerEditText" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/firstPlayerMarkImageView"
                            android:src="@drawable/x"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:background="@drawable/border"
                android:id="@+id/SecondPlayer"
                android:layout_weight="0.41">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/SecondPlayerTitle">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Second Player"
                        android:id="@+id/secondPlayerTitleTextView"
                        android:textAlignment="center"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.52"
                    android:id="@+id/SecondPlayerBody">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:id="@+id/SecondPlayerName">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Name :"
                            android:id="@+id/secondPlayerNameTextView"
                            android:layout_marginLeft="40dp" />

                        <EditText
                            android:layout_width="194dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="Player 2"
                            android:ems="10"
                            android:id="@+id/secondPlayerEditText" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/secondPlayerMarkImageView"
                            android:src="@drawable/o" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_weight="0.04"
            android:id="@+id/SelectMove">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="174dp"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:id="@+id/firstMoveTtitle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="First Move"
                    android:id="@+id/firstMoveTitleTextView"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/selectXorO">
                <RadioGroup android:id="@+id/selectXorORadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/xRadioButton"
                    android:id="@+id/selectXasRadioButton"
                    android:checked="true"
                    android:layout_weight="1" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/oRadioButton"
                    android:id="@+id/selectOasRadioButton"
                    android:checked="false"
                    android:layout_weight="1" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SelectRounds"
            android:layout_weight="0.19">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="174dp"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:id="@+id/SelectRoundTitle"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Select Round"
                    android:id="@+id/SelectRoundTextView"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/SelectROundNumber"
                android:weightSum="1">
                <RadioGroup
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectRoundRadioButton"
                    android:layout_weight="0.82"
                    android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/selectOneRoundRadioButton"
                    android:checked="true"
                    android:layout_weight="0.64" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/selectThreeRoundRadioButton"
                    android:checked="false"
                    android:layout_weight="0.71" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/selectFiveRoundRadioButton"
                    android:checked="false"
                    android:layout_weight="1" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:weightSum="1"
            android:id="@+id/StartButtonLayout"
            android:layout_weight="0.29"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="201dp"
                android:layout_height="91dp"
                android:id="@+id/startGameButton"
                android:layout_marginLeft="90dp"
                android:layout_gravity="center"
                android:background="@drawable/starthere" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
